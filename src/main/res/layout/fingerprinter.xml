<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id = "@+id/fingerprinter"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/InnerRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:text="Back"
                android:id="@+id/back_finger"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            </Button>
            <Button
                android:text="Test"
                android:id="@+id/test_finger"

                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </Button>
        </RelativeLayout>


        <TextView
            android:id="@+id/fingerPrinter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="41dp"
            android:text="FingerPrinter:"
            android:textSize="15pt" />

        <TextView
            android:id="@+id/fingerPrinterOutput"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="89dp"

            android:textSize="10pt" />

        <TextView
            android:id="@+id/result_finger"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="430dp"
            android:text="Result:"
            android:textSize="15pt" />

        <TextView
            android:id="@+id/resultOutput_finger"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="494dp"
            android:textSize="15pt" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>